<%=layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">  
    <div class="col-6 offset-3">
        <h2>Login </h2>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username"   placeholder="" type="text" class="form-control" required>
            </div>

            <div class="mb-3">          
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password"   placeholder="" type="password" class="form-control" required>
            </div>
            <button class="btn btn-success mb-3">Login</button>
        </form>
    </div>
</div>