<%=layout("/layouts/boilerplate.ejs")%>

    <div class="row mt-3">

        <div class="col-6 offset-3">
            <h2>Signup for wanderlust</h2>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">

                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" placeholder="" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <div class="mb-3">

                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" placeholder="" type="email" class="form-control" required>
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <div class="mb-3">

                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" placeholder="" type="password" class="form-control" required>
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <button class="btn btn-success mb-3">Signup</button>
            </form>
        </div>
    </div>